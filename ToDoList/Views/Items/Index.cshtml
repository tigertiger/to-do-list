@{
  Layout = "_Layout";
}
@using System.Linq;
@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}

<ul>
  @foreach(Item item in Model)
  {
    @if (@item.Complete == false)
    {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.DueDate | "Not Completed"
      </li>
    }
    else {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.DueDate | "Completed"
      </li>
    }
}
</ul>

<p>@Html.ActionLink("Add new item", "Create")</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>